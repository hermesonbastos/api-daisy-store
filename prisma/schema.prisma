// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Admin {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
}
model Category {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
}
model Product{
  id          Int     @id @default(autoincrement())
  name        String
  description String
  price       Float 
  stock       Int
}